<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.splashscreenaskit">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SideBar"/>
        <activity android:name=".QuestionScreen" />
        <activity android:name=".AskScreen" />
        <activity android:name=".AnswerView" />
        <activity android:name=".Login" />
        <activity android:name=".OverText" />
        <activity android:name=".ProfilePage" />
        <activity android:name=".Profile" />
        <activity android:name=".Register" />
        <activity android:name=".SearchResultScreen" />
        <activity android:name=".AskingQuestionsScreen" />
        <activity
            android:name=".MainScreen"
            android:label="@string/title_activity_main_screen"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>